<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/p1"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Breed Name"
        app:layout_constraintBottom_toBottomOf="@+id/breedImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/breedImage"
        app:layout_constraintTop_toTopOf="@+id/breedImage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/breedImage"
        android:layout_width="222dp"
        android:layout_height="153dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/p1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/holder" />

</android.support.constraint.ConstraintLayout>